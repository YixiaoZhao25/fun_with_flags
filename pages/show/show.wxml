  <view class="card-title"> Funfact:</view>
  <view>{{funfact}}</view>

</view>
<view class="funfact-card" wx:for="{{funfacts}}">
  <view class="card-title"> Funfact:</view>
  <view>{{item.description}}</view>
</view>


<view class="button">
<button bindtap="switchTab" type="primary">Go back to Index</button>
</view>
