<view class="header">Fun with Flags presents: </view>
<view class="container-card">
    <view class="card-title"> This is the flag from the country of {{country.name}}
      <view bindtap="addFavorite"> 
      <image class="likebtn" src="/pages/show/img/3 yarn, heart, needl.png">Favorite</image> 
      </view>
      <view id="likeId" >{{country.likednum}}</view>
    </view>
<image src="{{country.photo.path}}"></image> 

