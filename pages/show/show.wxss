}

.header{
  background-color:#565158;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  display: block;
  height: 100rpx;
  padding-top: 7rpx;
}

.header-name{
  color: #F7DD8E;
  font-size: 70rpx;
  align-content: center;
  font-family: 'Lobster';
}

  .card {
    height: 750rpx;
    width: 700rpx; 
    background: white;
    padding: 10rpx;
    box-sizing: border-box;
    box-shadow: 5rpx 5rpx 5rpx 5rpx #aaaaaa;
    margin-left: 20rpx;
    margin-top:30rpx;
    padding: 20rpx;
    border-radius: 4rpx;
    justify-content:center;
    display: inline-block;
    overflow: hidden;
  }

  .country-footer{
    margin-top: 20rpx;
