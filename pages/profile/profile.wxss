page {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.card {
  height: 100px;
  width: 100%;
  background: white;
  padding: 16rpx;
  box-sizing: border-box;
  box-shadow: 2px 2px 4px rgba(0,0,0,0.2);
  margin: 32rpx 0;
  display: flex;
  background-color: whitesmoke;
}

.name{
color: #565158;
font-size: 40rpx;
font-weight: 400;
font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
}

.avartar{
  height: 150rpx;
  width: 150rpx;
  border-radius: 60%;
  overflow: hidden;
  
}

