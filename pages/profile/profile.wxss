Page {
  padding: 32rpx;
  box-sizing: border-box;
}

.card {
  height: 240rpx;
  width: 100%;
  margin-bottom: 32rpx;
  padding: 16rpx;
  box-sizing: border-box;
  box-shadow: 2px 2px 4px rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.name {
  color: #565158;
  font-size: 40rpx;
  font-weight: 400;
  font-family: 'Lobster';
  margin: 0 32rpx;
}

.avartar {
  height: 150rpx;
  width: 150rpx;
  border-radius:50%;
  overflow: hidden;
}

.header {
  margin: 64rpx 0;
  font-size: 48rpx;
  font-weight: bold;
}

.btn{
  color:#F7DD8E;
  background-color: #565158;
  width: 30% !important;
  padding: 10rpx;
  border-radius: 10rpx;
  flex-shrink: 1;
}