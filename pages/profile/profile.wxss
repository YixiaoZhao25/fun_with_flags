.card {
  height: 100px;
  width: 100%;
  padding: 16rpx;
  box-sizing: border-box;
  box-shadow: 2px 2px 4px rgba(0,0,0,0.2);
  margin-right: 20rpx;
  display: flex;
  background-color:whitesmoke;
  border-radius: 10px;
}

.name {
color: #565158;
font-size: 35rpx;
font-weight: 400;
font-family: 'Lobster';
}

.avatar {
  height: 150rpx;
  width: 150rpx;
  border-radius: 60%;
  overflow: hidden;
}

.card2 {
  height: 500px;
  width: 100%;
  padding: 16rpx;
  box-sizing: border-box;
  box-shadow: 2px 2px 4px rgba(0,0,0,0.2);
  border-radius: 10px;
  margin: 32rpx 0;
  font-size: 40rpx;
  font-weight: 500;
  color:#565158;
  font-family:OpenSans;
  background-color:whitesmoke;
}

